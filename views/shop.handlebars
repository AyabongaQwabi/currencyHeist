<div class='row'>
		{{#products}}	     
	        <div class="col s12 m3">
	          <div class="card">
	            <div class="card-image">
	              <img src="img/{{url}}">
	              <span class="card-title">
	              	<a href='shop/addToCart/featured/{{id}}' class='chip black white-text'> buy <i class="material-icons">shopping_cart</i></a>
	              </span>
	            </div>
	            <div class="card-content">
	              <h5 class="black-text flow-text">{{name}}</h5>
	            </div>
	            <div class="card-action">
	              <h6 class="black-text flow-text"><small>{{description}}</small> &nbsp; <small><b>R{{price}}</b></small></h6>
	            </div>
	          </div>
	        </div>
	       

	    {{/products}}


</div>
